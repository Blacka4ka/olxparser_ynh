[Unit]
Description=Gunicorn instance to serve OLXParser
After=network.target

[Service]
User=yunohost
Group=yunohost
WorkingDirectory=/var/www/olxparser
Environment="PATH=/usr/bin"
ExecStart=/usr/bin/gunicorn --workers 3 --bind 127.0.0.1:5000 wsgi:app

[Install]
WantedBy=multi-user.target
