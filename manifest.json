{
  "id": "olxparser",
  "name": "OLX Parser",
  "packaging_format": 1,
  "version": "1.0.0",
  "description": {
    "en": "Simple OLX parser in Flask.",
    "uk": "Простий парсер для OLX на Flask."
  },
  "maintainer": "Blacka4ka <your@email.com>",
  "license": "MIT",
  "url": "https://github.com/Blacka4ka/olxparser_ynh",
  "supported": true,
  "requirements": {
    "yunohost": ">= 12.0.0"
  },
  "services": [
    "nginx"
  ],
  "arguments": {
    "install" : [
      {
        "name": "domain",
        "type": "domain",
        "ask": {
          "en": "Choose a domain for the app",
          "uk": "Оберіть домен для додатка"
        }
      },
      {
        "name": "path",
        "type": "path",
        "default": "/olxparser",
        "ask": {
          "en": "Choose a URL path for the app",
          "uk": "Оберіть шлях у URL для додатка"
        }
      }
    ]
  }
}
