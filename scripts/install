#!/bin/bash

set -e

# Приклад: встановлення залежностей, запуск сервісу

echo "Встановлення OLX Parser..."

# Оновити систему (опціонально)
# apt-get update

# Встановити Python і pip (приклад)
apt-get install -y python3 python3-pip

# Встановити залежності Flask (припустимо requirements.txt в src/)
pip3 install -r src/requirements.txt

# Налаштування сервісу (systemd або nginx) - за потреби

echo "OLX Parser встановлено."
